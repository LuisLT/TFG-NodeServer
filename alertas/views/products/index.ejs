<table cellpadding="4px"  cellspacing="0">
	<tr><td></td>
		<td align="center"><b>Nombre</b></td>
		<td align="center"><b>Direcci√≥n Ethereum</b></td>
		<td align="center"><b>Info</b></td>
		<td></td>
	</tr>

	<% for (var i in contracts) { %>
