	<% var name = names[i]; %>
	<% var alert = nAlerts[i]%>
	<% var active = actives[i]%>
	<tr>
	<td><img width="24px"  src="<%= active == false ? '/images/off.png' : '/images/on.png' %>" 
                     alt="Activo"></td>
		<td> <%=name%> </td>

		<td>
			<z> <%=contract%> </z>
		</td>

		<td>
			<a href="/products/<%=contract%>/article"><button type="button">Mostrar Producto</button></a>
		</td>
		
		<td>
			<a href="/products/<%=contract%>?_method=DELETE"
             onClick="return confirm('Borrar: <%= name %>');">
             <button>borrar</button></a>
        </td>
        <td><img width="24px"  src="<%= alert > 0 ? '/images/warning.png' : '/images/correcto.png' %>" 
                     alt="alarma">
        </td>
	<% } %>
	
	

</table>

